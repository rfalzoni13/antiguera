@model Antiguera.Administrador.Models.JogoModel

@{
    ViewBag.Title = "Editar jogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Editar jogo
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Jogo")"><i class="fa fa-dashboard"></i> @ViewContext.RouteData.GetRequiredString("controller")</a></li>
            <li class="active"><i class="fa fa-shopping-bag"></i> @ViewContext.RouteData.GetRequiredString("action")</li>
        </ol>
    </section><!--section -->

    <section class="content container-fluid">
        <div class="container">
            @using (Html.BeginForm("Editar", "Jogo", FormMethod.Post, new { @class = "form-admin", enctype = "multipart/form-data" }))
            {
                if (ViewBag.ErroMensagem != null)
                {
                    <div class="col-md-11">
                        <div class="alert alert-danger">
                            <button type="button" class="close alert-close"><span aria-hidden="true">&times;</span></button>
                            @ViewBag.ErroMensagem
                        </div>
                    </div>
                }

                if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                {
                    <div class="col-md-11">
                        <div class="alert alert-danger">
                            <button type="button" class="close alert-close"><span aria-hidden="true">&times;</span></button>
                            @Html.ValidationSummary(false, "Ocorreram os seguintes erros: ")
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Nome)
                        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @autofocus = "autofocus" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Developer)
                        @Html.TextBoxFor(x => x.Developer, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Lancamento)
                        <div class="input-group date" data-provide="datepicker">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.TextBoxFor(x => x.Lancamento, new { @class = "form-control pull-right" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Genero)
                        @Html.TextBoxFor(x => x.Genero, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Publisher)
                        @Html.TextBoxFor(x => x.Publisher, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Plataforma)
                        @Html.TextBoxFor(x => x.Plataforma, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.FileBoxArt)
                        @Html.TextBoxFor(x => x.FileBoxArt, new { @type = "file" })
                    </div>
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.FileJogo)
                        @Html.TextBoxFor(x => x.FileJogo, new { @type = "file" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-5">
                        @Html.LabelFor(x => x.Descricao)
                        @Html.TextAreaFor(x => x.Descricao, new { @class = "form-control", @rows = "5" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <button class="btn btn-success btn-block" type="submit">Salvar</button>
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default btn-block" })
                    </div>
                </div>
            }

        </div> <!-- /container -->
    </section>
</div>

@section scripts {
    @Scripts.Render("~/bundles/js/bootstrap-datepicker")
}

