@model Antiguera.Administrador.ViewModels.JogoViewModel

@{
    ViewBag.Title = "Editar jogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    @Styles.Render("~/Content/libraries/jquery.JCrop/jquery.JCrop.css")
    @Styles.Render("~/bundles/bootstrap-datepicker")

    <style>
        .col-md-4 p {
            margin: 5px 75px -25px;
        }
    </style>
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Editar jogo
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Jogo")"><i class="fa fa-dashboard"></i> @ViewContext.RouteData.GetRequiredString("controller")</a></li>
            <li class="active"><i class="fa fa-shopping-bag"></i> @ViewContext.RouteData.GetRequiredString("action")</li>
        </ol>
    </section><!--section -->

    <section class="content container-fluid">
        <div class="container">
            @using (Html.BeginForm("Editar", "Jogo", FormMethod.Post, new { @class = "form-admin", enctype = "multipart/form-data" }))
            {
                if (ViewBag.ErroMensagem != null)
                {
                    <div class="col-md-11">
                        <div class="alert alert-danger">
                            <button type="button" class="close alert-close"><span aria-hidden="true">&times;</span></button>
                            @ViewBag.ErroMensagem
                        </div>
                    </div>
                }

                if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                {
                    <div class="col-md-11">
                        <div class="alert alert-danger">
                            <button type="button" class="close alert-close"><span aria-hidden="true">&times;</span></button>
                            @Html.ValidationSummary(false, "Ocorreram os seguintes erros: ")
                        </div>
                    </div>
                }

                @Html.HiddenFor(x => x.Id)
                @Html.HiddenFor(x => x.Arquivo)
                @Html.HiddenFor(x => x.BoxArt)
                @Html.HiddenFor(x => x.Created)
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Nome)
                        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @autofocus = "autofocus" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Developer)
                        @Html.TextBoxFor(x => x.Developer, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Lancamento)
                        <div class="input-group date" data-provide="datepicker">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            @Html.TextBoxFor(x => x.Lancamento, Model.Lancamento.ToString("dd/MM/yyyy"), new { @class = "form-control pull-right" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Genero)
                        @Html.TextBoxFor(x => x.Genero, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Publisher)
                        @Html.TextBoxFor(x => x.Publisher, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Plataforma)
                        @Html.TextBoxFor(x => x.Plataforma, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <div class="row">
                    @if (!string.IsNullOrEmpty(Model.BoxArt))
                    {
                        <div class="col-md-4">
                            @Html.LabelFor(x => x.FileBoxArt)
                            @Html.TextBoxFor(x => x.FileBoxArt, new { @type = "file", @style = "display:none" })
                            <p id="textBoxArt">@(Model.BoxArt.Split('/')[4])</p>
                            <button type="button" id="ClickBoxArt" class="btn btn-primary">Alterar</button>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-4">
                            @Html.LabelFor(x => x.FileBoxArt)
                            @Html.TextBoxFor(x => x.FileBoxArt, new { @type = "file" })
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Arquivo))
                    {
                        <div class="col-md-4">
                            @Html.LabelFor(x => x.FileJogo)
                            @Html.TextBoxFor(x => x.FileJogo, new { @type = "file", @style = "display:none" })
                            <p id="textFile">@(Model.Arquivo.Split('/')[3])</p>
                            <button type="button" id="ClickFile" class="btn btn-primary">Alterar</button>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-4">
                            @Html.LabelFor(x => x.FileJogo)
                            @Html.TextBoxFor(x => x.FileJogo, new { @type = "file" })
                        </div>
                    }
                </div>
                @*<br />
                    <div class="row">
                        <div class="col-md-3">
                            <img src="@Model.UrlBoxArt" id="photoBoxArt" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-md-3">
                            <button type="button" id="removePhoto" class="btn btn-danger">Remover foto</button>
                        </div>
                    </div>*@
                <br />
                <div class="row">
                    <div class="col-md-5">
                        @Html.LabelFor(x => x.Descricao)
                        @Html.TextAreaFor(x => x.Descricao, new { @class = "form-control", @rows = "5" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <button class="btn btn-success btn-block" type="submit">Salvar</button>
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default btn-block" })
                    </div>
                </div>
            }

        </div> <!-- /container -->
    </section>
</div>

@section modals
{
    <div class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Recortar foto</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <img class="img-responsive center-block" id="ImagePreview" />
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        @*<div class="col-md-12">
                                <button type="button" class="btn btn-primary" onclick="antiguera.usuario.cadastrar.cortarImagem()">Cortar foto</button>
                            </div>*@
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                    <button type="button" class="btn btn-success">Recortar</button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
}

@section scripts {
    <script src="@Url.Content("~/Scripts/libraries/jquery.JCrop/jquery.JCrop.js")"></script>
    @Scripts.Render("~/bundles/js/bootstrap-datepicker")
    <script src="@Url.Content("~/Scripts/libraries/bootstrap-datepicker/locales/bootstrap-datepicker.pt-BR.min.js")"></script>
    @Scripts.Render("~/bundles/js/core")
    <script type="text/javascript" src="@Url.Content("~/Scripts/jogo/cadastrar.js")"></script>
}

