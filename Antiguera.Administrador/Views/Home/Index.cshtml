@model Antiguera.Administrador.Models.HomeModel

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Bem vindo Administrador
        </h1>
        @*<ol class="breadcrumb">
                <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                <li class="active">Here</li>
            </ol>*@
    </section>

    <!-- Main content -->
    <section class="content container-fluid">

        <div class="row">
            <!-- fix for small devices only -->
            <div class="clearfix visible-sm-block"></div>

            <div class="col-md-3 col-sm-7 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-blue-active"><i class="fa fa-user-circle"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">total usuários</span>
                        <span class="info-box-number">@Model.Usuarios.Count</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->

            <div class="clearfix visible-sm-block"></div>

            <div class="col-md-3 col-sm-7 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-green-gradient"><i class="fa fa-gamepad"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">total jogos</span>
                        <span class="info-box-number">@Model.Jogos.Count</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->

            <div class="clearfix visible-sm-block"></div>

            <div class="col-md-3 col-sm-7 col-xs-12">
                <div class="info-box">
                    <span class="info-box-icon bg-red-gradient"><i class="fa fa-file"></i></span>

                    <div class="info-box-content">
                        <span class="info-box-text">total programas</span>
                        <span class="info-box-number">@Model.Programas.Count</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
        <div class="row">
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="col-md-12">
                            <p class="text-center">
                                <strong>Progresso de desenvolvimento</strong>
                            </p>

                            <div class="progress-group">
                                <span class="progress-text">Módulo loja</span>
                                <span class="progress-number"><b>10</b>/100</span>

                                <div class="progress sm">
                                    <div class="progress-bar progress-bar-aqua" style="width: 10%"></div>
                                </div>
                            </div>
                            <!-- /.progress-group -->
                        </div><!-- /.col-md-4 -->
                    </div>
                </div><!-- /.box -->
            </div><!-- /.col-md-12 -->
        </div><!-- /.row -->
    </section>
    <!-- /.section -->
</div>
<!-- /.content-wrapper -->
