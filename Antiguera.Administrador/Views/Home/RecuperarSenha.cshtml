@model Antiguera.Administrador.Models.PasswordRecoveryModel

@{
    ViewBag.Title = "Recuperar Senha";
    Layout = null;
}

<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Antiguera - @ViewBag.Title</title>
    @Styles.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css/Login")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-color: #ebebeb;
        }
    </style>
</head>

<body>
    <div class="container-image">
        <img src="~/Content/Images/LogoAntiguera2.png" />
    </div>
    <div class="container">
        @using (Html.BeginForm("RecuperarSenha", "Home", FormMethod.Post, new { @class = "form-signin" }))
        {
            if (ViewBag.ErroMensagem != null)
            {
                <div class="alert alert-danger">
                    <button type="button" class="close alert-close"><span aria-hidden="true">&times;</span></button>
                    <p>@ViewBag.ErroMensagem</p>
                </div>
            }

            if (ViewBag.StatusMensagem != null)
            {
                <div class="alert alert-info">
                    <button type="button" class="close alert-close"><span aria-hidden="true">&times;</span></button>
                    <p>@ViewBag.StatusMensagem</p>
                </div>
            }

            <h2 class="form-signin-heading">Recuperar senha</h2>

            @Html.LabelFor(x => x.Email, new { @class = "sr-only" })
            @Html.TextBoxFor(x => x.Email, new { @type = "email", @id = "Senha", @class = "form-control", @placeholder = "Digite seu e-mail" })
            
            <br />
            <button class="btn btn-lg btn-primary btn-block" type="submit">Enviar link de recuperação de senha</button>
        }

    </div> <!-- /container -->
    <div class="container container-footer">
        <footer>
            <p>&copy; @DateTime.Now.Year - Renato Falzoni - Todos os direitos reservados.</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Scripts")
</body>
</html>

