<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <title>Antiguera - @ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    @Styles.Render("~/bundles/bootstrap")
    @Styles.Render("~/bundles/admin-lte")
    @Styles.Render("~/bundles/admin-lte/skins")
    @Styles.Render("~/Content/css")
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="hold-transition @System.Configuration.ConfigurationManager.AppSettings["CorHeader"] sidebar-mini fixed">
    <div class="loading">
        <div class="loader"></div>
    </div>
    <div class="wrapper">

        @Html.Action("_Header", "Base", new { area = "" })

        <!-- Left side column. contains the logo and sidebar -->
        <aside class="main-sidebar">

            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">

                @*<!-- Sidebar user panel (optional) -->
                <div class="user-panel">
                  <div class="pull-left image">
                    <img src="~/admin-lte/img/user4-128x128.jpg" class="img-circle" alt="User Image">
                  </div>
                  <div class="pull-left info">
                    <p>Renato Falzoni</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                  </div>
                </div>*@

                <!-- search form (Optional) -->
                @*<form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Pesquisar aqui...">
                        <span class="input-group-btn">
                            <button type="submit" name="search" id="search-btn" class="btn btn-flat">
                                <i class="fa fa-search"></i>
                            </button>
                        </span>
                    </div>
                </form>*@
                <!-- /.search form -->
                <!-- Sidebar Menu -->
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">Menu Principal</li>
                    <!-- Optionally, you can add icons to the links -->
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Jogo" ? "active" : "")"><a href="@Url.Action("Index", "Jogo")"><i class="fa fa-gamepad"></i> <span>Módulo jogos</span></a></li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-play"></i> <span>Módulo Consoles</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Emulador" ? "active" : "")"><a href="@Url.Action("Index", "Emulador")"><i class="fa fa-play-circle"></i> Emuladores</a></li>
                            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Rom" ? "active" : "")"><a href="@Url.Action("Index", "Rom")"><i class="fa fa-ra"></i> Roms</a></li>
                        </ul>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Programa" ? "active" : "")"><a href="@Url.Action("Index", "Programa")"><i class="fa fa-file"></i> <span>Módulo programas</span></a></li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-user"></i> <span>Módulo Administrativo</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Usuario" ? "active" : "")"><a href="@Url.Action("Index", "Usuario")"><i class="fa fa-users"></i> Usuários</a></li>
                            <li><a href="#"><i class="fa fa-user-secret"></i> Permissões</a></li>
                            <li><a href="#"><i class="fa fa-gear"></i> Preferências do site</a></li>
                        </ul>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["controller"].ToString() == "Configuracao" ? "active" : "")"><a href="@Url.Action("Index", "Configuracao")"><i class="fa fa-gears"></i> <span>Configurações</span></a></li>
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>

        @RenderBody()

        @Html.Partial("_Footer")

        @*@Html.Partial("_SideBar")*@

    </div>
    <!-- ./wrapper -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/js/bootstrap")
    @Scripts.Render("~/bundles/js/admin-lte")
    @Scripts.Render("~/bundles/Scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
