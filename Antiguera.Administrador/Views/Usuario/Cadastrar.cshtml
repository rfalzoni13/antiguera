@model Antiguera.Administrador.ViewModels.UsuarioViewModel

@{
    ViewBag.Title = "Cadastrar novo usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" href="@Url.Content("~/Content/libraries/cropper/cropper.min.css")" />
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Cadastrar novo usuário
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Usuario")"><i class="fa fa-dashboard"></i> @ViewContext.RouteData.GetRequiredString("controller")</a></li>
            <li class="active"><i class="fa fa-shopping-bag"></i> @ViewContext.RouteData.GetRequiredString("action")</li>
        </ol>
    </section><!--section -->

    <section class="content container-fluid">
        <div class="container">
            @Html.HiddenFor(x => x.Foto)
            <div class="row">
                <div class="col-md-2">
                    <img id="ImgFoto" class="img-responsive img-bordered user-box" src="/Content/Images/Profile/user.png" />
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.TextBoxFor(x => x.FileFoto, new { @type = "file", @style = "display:none" })
                    <button type="button" id="BtnFoto" class="btn btn-block btn-primary">Inserir foto</button>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Nome)
                    @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @autofocus = "autofocus" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Sexo)
                    @Html.DropDownListFor(x => x.Sexo, Model.Sexos, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Login)
                    @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(x => x.Senha)
                    @Html.TextBoxFor(x => x.Senha, new { @type = "password", @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(x => x.ConfirmarSenha)
                    @Html.TextBoxFor(x => x.ConfirmarSenha, new { @type = "password", @class = "form-control" })
                </div>
            </div>
            <br />
            <div class="row">
                @if (Model.ListaAcessos != null)
                {
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.AcessoId)
                        @Html.DropDownListFor(x => x.AcessoId, Model.ListaAcessos, new { @class = "form-control" })
                    </div>
                }
            </div>
            <br />
            <div class="row">
                <div class="col-md-2">
                    <button id="Salvar" class="btn btn-success btn-block" type="submit">Cadastrar</button>
                </div>
                <div class="col-md-2">
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default btn-block" })
                </div>
            </div>
        </div> <!-- /container -->
    </section>
</div>

@section modals
{
    @Html.Partial("_ModalFoto")
    @Html.Partial("_ModalSucesso")
    @Html.Partial("_ModalError")
}

@section scripts
{
    <script src="@Url.Content("~/Scripts/libraries/cropper/cropper.min.js")"></script>
    <script src="@Url.Content("~/Scripts/libraries/jquery-cropper/jquery-cropper.min.js")"></script>
    @Scripts.Render("~/bundles/js/core")
    <script type="text/javascript" src="@Url.Content("~/Scripts/usuario/cadastrar.js")"></script>
}


