@model Antiguera.Administrador.Models.UsuarioModel

@{
    ViewBag.Title = "Cadastrar novo usuário";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Cadastrar novo usuário
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Usuario")"><i class="fa fa-dashboard"></i> @ViewContext.RouteData.GetRequiredString("controller")</a></li>
            <li class="active"><i class="fa fa-shopping-bag"></i> @ViewContext.RouteData.GetRequiredString("action")</li>
        </ol>
    </section><!--section -->

    <section class="content container-fluid">
        <div class="container">
            @using (Html.BeginForm("Cadastrar", "Usuario", FormMethod.Post, new { @class = "form-admin", enctype = "multipart/form-data" }))
            {
                if (ViewBag.ErroMensagem != null)
                {
                    <div class="col-md-11">
                        <div class="alert alert-danger">
                            <button type="button" class="close alert-close"><span aria-hidden="true">&times;</span></button>
                            @ViewBag.ErroMensagem
                        </div>
                    </div>
                }

                if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
                {
                    <div class="col-md-11">
                        <div class="alert alert-danger">
                            <button type="button" class="close alert-close"><span aria-hidden="true">&times;</span></button>
                            @Html.ValidationSummary(false, "Ocorreram os seguintes erros: ")
                        </div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Nome)
                        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @autofocus = "autofocus" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Email)
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Sexo)
                        @Html.DropDownListFor(x => x.Sexo, Model.Sexos, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Login)
                        @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.Senha)
                        @Html.TextBoxFor(x => x.Senha, new { @type = "password", @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        @Html.LabelFor(x => x.ConfirmarSenha)
                        @Html.TextBoxFor(x => x.ConfirmarSenha, new { @type = "password", @class = "form-control" })
                    </div>
                </div>
                <div class="row">
                    @if (Model.ListaAcessos != null)
                    {
                        <div class="col-md-3">
                            @Html.LabelFor(x => x.AcessoId)
                            @Html.DropDownListFor(x => x.AcessoId, Model.ListaAcessos, new { @class = "form-control" })
                        </div>
                    }
                </div>
                <br />
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelFor(x => x.FileFoto)
                        @Html.TextBoxFor(x => x.FileFoto, new { @type = "File", @accept = ".jpg, .png" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <button class="btn btn-success btn-block" type="submit">Cadastrar</button>
                    </div>
                    <div class="col-md-2">
                        @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default btn-block" })
                    </div>
                </div>
            }

        </div> <!-- /container -->
    </section>
</div>


